<%- include('../../partials/header') %>

<h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Create Grocery List</h1>

<form method="POST" action="/grocery/generate">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">

  <!-- Saved Recipes -->
  <section class="mb-8">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Your Saved Recipes</h2>
    <% if (savedRecipes.length === 0) { %>
      <p class="text-sm text-gray-500 dark:text-gray-400">No saved recipes yet. <a href="/recipes" class="text-primary dark:text-primary-light hover:underline">Find some recipes</a> to get started.</p>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
        <% savedRecipes.forEach(function(recipe) { %>
          <label class="flex items-start gap-3 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm p-4 cursor-pointer hover:border-primary dark:hover:border-primary-light transition-colors">
            <input type="checkbox" name="savedRecipes" value="<%= recipe.id %>" class="mt-1 rounded border-gray-300 text-primary focus:ring-primary">
            <div class="min-w-0">
              <span class="font-medium text-gray-900 dark:text-white text-sm block truncate"><%= recipe.title %></span>
              <% if (recipe.source) { %>
                <span class="text-xs text-gray-500 dark:text-gray-400"><%= recipe.source %></span>
              <% } %>
            </div>
          </label>
        <% }); %>
      </div>
    <% } %>
  </section>

  <!-- Suggested Recipes -->
  <section class="mb-8">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Suggested Recipes (based on your pantry)</h2>
    <% if (suggestedRecipes.length === 0) { %>
      <p class="text-sm text-gray-500 dark:text-gray-400">No suggestions available. Add items to your <a href="/pantry" class="text-primary dark:text-primary-light hover:underline">pantry</a> to get recipe suggestions.</p>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
        <% suggestedRecipes.forEach(function(recipe) { %>
          <label class="flex items-start gap-3 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm p-4 cursor-pointer hover:border-primary dark:hover:border-primary-light transition-colors">
            <input type="checkbox" name="spoonacularRecipes" value="<%= recipe.id %>" class="mt-1 rounded border-gray-300 text-primary focus:ring-primary">
            <div class="min-w-0 flex-1">
              <span class="font-medium text-gray-900 dark:text-white text-sm block truncate"><%= recipe.title %></span>
              <div class="flex gap-2 mt-1">
                <span class="badge badge-success"><%= recipe.usedIngredientCount || 0 %> used</span>
                <span class="badge badge-warning"><%= recipe.missedIngredientCount || 0 %> missing</span>
              </div>
            </div>
          </label>
        <% }); %>
      </div>
    <% } %>
  </section>

  <div class="flex gap-3">
    <button type="submit" class="btn-primary">
      <svg class="w-4 h-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>
      Generate Grocery List
    </button>
    <a href="/grocery" class="btn-secondary">Cancel</a>
  </div>
</form>

<%- include('../../partials/footer') %>
