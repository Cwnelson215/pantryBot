<%- include('../../partials/header') %>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Grocery Lists</h1>
  <a href="/grocery/new" class="btn-primary">
    <svg class="w-4 h-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/></svg>
    Create Grocery List
  </a>
</div>

<% if (lists.length === 0) { %>
  <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm p-8 text-center">
    <div class="w-16 h-16 mx-auto mb-4 bg-primary/10 dark:bg-primary-light/10 rounded-xl flex items-center justify-center">
      <svg class="w-8 h-8 text-primary dark:text-primary-light" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>
    </div>
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">No grocery lists yet</h3>
    <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Select recipes to automatically generate a shopping list based on what you already have in your pantry.</p>
    <a href="/grocery/new" class="btn-primary">Create Your First List</a>
  </div>
<% } else { %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <% lists.forEach(function(list) { %>
      <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm p-5 hover:shadow-md transition-shadow">
        <a href="/grocery/<%= list.id %>" class="block">
          <h3 class="font-semibold text-gray-900 dark:text-white mb-1 truncate"><%= list.name %></h3>
          <p class="text-xs text-gray-500 dark:text-gray-400">
            Created <%= new Date(list.createdAt).toLocaleDateString() %>
          </p>
        </a>
        <div class="mt-3 flex justify-end">
          <form method="POST" action="/grocery/<%= list.id %>/delete" class="inline">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="btn-ghost-danger text-xs" onclick="return confirm('Delete this list?')">Delete</button>
          </form>
        </div>
      </div>
    <% }); %>
  </div>
<% } %>

<%- include('../../partials/footer') %>
